export XDG_CONFIG_HOME=$HOME/.config


fzf-cd-home() {
  local dir
  dir=$(fd . --type d --hidden --follow --exclude .git "$HOME" | fzf) || return
  cd "$dir" && echo -e "\nPath: $PWD\n"
  echo
}
zle -N fzf-cd-home
bindkey '^H' fzf-cd-home


fzf-cd-prog() {
  local dir
  dir=$(fd . --type d --hidden --follow --exclude .git "$HOME/programmieren" | fzf) || return
  cd "$dir" && echo -e "\nPath: $PWD\n"
  echo
}
zle -N fzf-cd-prog
bindkey '^P' fzf-cd-prog

fzf-cd-current() {
  local file dir
  file=$(fd . --type d --hidden --follow --exclude .git . | fzf) || return
  dir=$(dirname "$file")
  cd "$dir" && echo -e "\nPath: $PWD\n"
  echo

}
zle -N fzf-cd-current
bindkey '^F' fzf-cd-file


